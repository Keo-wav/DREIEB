<h2><%= @drug.name %></h2>
<p><%= @drug.category %></p>
<p><%= @drug.price %></p>
<%= cl_image_tag @drug.photo.key, height: 300, width: 400, crop: :fill %>
<p><%= @drug.description %></p>
<p><%= @drug.delivery_time %></p>

<% if current_user.id == @drug.user_id || current_user.role == 'admin' %>
  <%= link_to 'Edit', edit_drug_path(@drug) %>
<% end %>


<div class="form-group">
  <%= simple_form_for [@drug, @order] do |f| %>
    <div class="col-sm-4 col-sm-10">
      <div class="btn btn-primary">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>
</div>


<% if current_user.id == @drug.user_id || current_user.role == 'admin' %>
<%= link_to "Delete",
  drug_path(@drug),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<% end %>

<%= link_to 'Back', drugs_path %>
