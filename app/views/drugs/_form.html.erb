<div class="form-group form_edit_new_drug">
  <%= simple_form_for @drug do |f| %>
    <div class= "mx-auto col-10 col-md-8 col-lg-6">
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.input :description %>
      <%= f.input :photo, as: :file %>
      <%= f.input :category,
      as: :select,
      collection: @type.map %>
      <%= f.input :delivery_time %>
      <div class="btn btn-primary rounded-4">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>
</div>
