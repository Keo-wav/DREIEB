<div class="row row-cols-1 row-cols-md-3">
  <% @drugs.each do |drug| %>
      <div class="col-md-4">
        <div class="card h-100">
          <div class="card-body">
            <h4 class="card-name"> <%= link_to drug.name, drug_path(drug) %></h4>
            <h5 class="card-category"> <%= drug.category %></h5>
            <% if drug.photo.attached? %>
              <%= cl_image_tag drug.photo.key, height: 300, width: 400, crop: :fill %>
            <% else %>
              <%= image_tag "https://images.unsplash.com/photo-1517436073-3b1b1b1b1b1b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", height: 300, width: 400, crop: :fill %>
            <% end %>
            <p class="card-description"> <%= drug.description %></p>
            <p class="card-text">Price : <%= drug.price %>$</p>
          </div>
        </div>
      </div>
  <% end %>
</div>

<% if current_user.role == 'seller'|| current_user.role == 'admin' %>
  <button><%= link_to 'New drug', new_drug_path %></button>
<% end %>
