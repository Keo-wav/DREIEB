<div class="order-button">
  <% if delete == "true" %>
    <%= link_to("Annuler", order_path(order), method: :delete, class: "btn btn-danger") %>
  <% else %>
    <%= link_to("Approve order", approve_path(order), method: :patch, class: "btn btn-success")  %>
    <%= link_to("Decline order", decline_path(order), method: :patch, class: "btn btn-danger") %>
  <% end %>
</div>
